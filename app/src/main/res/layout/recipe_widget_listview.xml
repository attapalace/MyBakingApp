<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80FFFFFF"
    android:padding="@dimen/widget_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_recipe_ingredients"
        android:textStyle="bold"
        android:id="@+id/widget_ingredients_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/ingredients_title_size"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/black"
        android:dividerHeight="1dp"
        android:id="@+id/ingredients_widget_list_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/empty_text_view"
        android:textStyle="bold"
        android:textSize="@dimen/ingredients_title_size"
        android:text="@string/widget_first_time_text"/>

</LinearLayout>